<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quan.mapper.TbDepartmentMapper">
    <resultMap id="BaseResultMap" type="com.quan.pojo.TbDepartment">
        <!--@mbg.generated-->
        <!--@Table tb_department-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="mgr_id" jdbcType="BIGINT" property="mgrId"/>
        <result column="version" jdbcType="BIGINT" property="version"/>
        <result column="deleted" jdbcType="BOOLEAN" property="deleted"/>
    </resultMap>
    <resultMap id="Count" type="com.quan.vo.TbDepartmentShowView">
        <!--@mbg.generated-->
        <!--@Table tb_department-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <association property="count" select="com.quan.mapper.TbDepartmentMapper.countByNoDel" column="department_id=id"
                     javaType="java.lang.Integer"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, `name`, phone, address, create_time, modified_time, mgr_id, version, deleted
    </sql>
    <select id="getDepartment" resultMap="Count">
        select id, name
        from tb_department
    </select>
    <select id="countByNoDel" resultType="java.lang.Integer">
        select count(*) count
        from tb_user
        where department_id = #{department_id}
          and deleted = 0
        group by department_id
    </select>
</mapper>